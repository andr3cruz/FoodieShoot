<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-188dp"
        android:layout_marginBottom="519dp"
        android:layout_above="@+id/about_relative"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_back" />

    <RelativeLayout
        android:id="@+id/about_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/about_about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:text="@string/about"
            android:textSize="25sp" />

        <View
            android:id="@+id/about_view"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/about_about_text"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:id="@+id/about_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="25dp"
            android:paddingTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="30dp"
            android:requiresFadingEdge="vertical"
            android:theme="@style/ScrollEdge"
            android:layout_below="@+id/about_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/about_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="          This app allows you to detect different types of food in your plate, as well as find their generic calories so that you can discover what you are eating and making healthier choices."/>

                <TextView
                    android:id="@+id/about_posts_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:layout_below="@id/about_description"
                    android:text="          This app is also able to store each of your food analysis into a collection of posts. Each post will not only store the tilte, data and location where it was made so that you can track what you have eaten but also store the details of each food."/>

                <TextView
                    android:id="@+id/about_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:layout_below="@id/about_posts_save"
                    android:text="          You might be wondering how it is able to recognize foods, it uses machine learning algorithms to detect objects, where the objects are foods, 88 possible foods, to build the object detection the app uses a tflite converted model built with TensorFlow, if you want to know more check out our site"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_below="@+id/about_tf"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Version: 1.0"
                    android:layout_below="@id/about_tf"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/release"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date released: 20-05-2020"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/version"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_below="@+id/release"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>